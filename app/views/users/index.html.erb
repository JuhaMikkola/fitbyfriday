<div class="row">
  <div class="small-12 large-12 columns"><h1>Get Fit with Friends</h1>
  </div>
</div>

<% count = 1 %>

<% @users.each do |user| %>

  <% if count.even? %>
    <div class="row">
  <% end %>

  <div class="small-12 large-6 columns">
  <br>
  <%= link_to gravatar_for(user), user_path(user.id) %> <br>
  <b>Username:</b> <%= user.username %> <br>
  <b>Email:</b> <%= mail_to "#{user.email}" %> <br>
  <br>

  <% if current_user == user %>
    <%= link_to 'Edit', edit_user_path(user), class: "tiny button"  %>
      <%= link_to 'Destroy', user, method: :delete, class: "tiny button", data: { confirm: 'Are you sure?' } %>
    <% end %>

  </div>

  <% if count.even? %>
    </div>
  <% end %>

  <% count += 1 %>

  <% end %>
