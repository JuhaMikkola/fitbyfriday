<% if current_user.requested_friendships.any? %>

  <h3>Pending Friend Requests</h3>

  <% current_user.requested_friendships.each do |request| %>
      <%= link_to request.sender.username, user_path(request.sender) %>
      <%= link_to 'Confirm Friendship  ', confirm_friendship_path(request), method: :post, class: "success tiny button" %>
    <% end %>
<% end %>
