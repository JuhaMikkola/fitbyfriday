<% if current_user.target_friendships.where(:confirmed => nil).any? %>



  <% current_user.target_friendships.each do |i| %>
    <% if i.confirmed == false || i.confirmed == nil %>
      Friend Request from  <%= link_to i.sender.username , user_path(i.sender.id) %>
      <%= link_to 'Accept  ', edit_friendship_path(id: i.id), class: " tiny button" %>
    <% end %>
  <% end %>
<% end %>
