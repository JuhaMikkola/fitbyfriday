<% if @user.sent_ratings.where(:confirmed => nil).any? %>
  <div class="rating-requests">
    <% @user.sent_ratings.where(confirmed: nil).each do |rating| %>
    <div class="rating">
      <div class="row request">
        <div class="small-6 columns">
          <h5>Was <%= rating.rated.username %> at <%= rating.workout.activity %>? </h5>
        </div>
        <div class="small-3 columns">
          <h5><%= link_to 'Yes', confirm_rating_path(rating), data: {rating_confirmation: true}, class: "confirm-rating" %></h5>
        </div>
        <div class="small-3 columns">
          <h5><%= link_to 'No', confirm_rating_path(rating), data: {rating_confirmation: false}, class: "confirm-rating" %></h5>
        </div>
        </div>
    </div>
  </div>
    <% end %>
  </div>
  <% if false %>
    <% if @user.sent_ratings.joins(:workout).where("confirmed = ? and workouts.start_date > ?", nil, Date.today.to_date).any? %>
    <% end %>
  <% end %>
<% end %>

</div>
