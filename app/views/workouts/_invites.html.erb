<% if @user.received_requests.where(:confirmed => "false").any? %>

  <div class="workout-invites">
    <% @user.received_requests.each do |r| %>
      <% if r.confirmed == false %>
        <div class="row invite">
          <div class="small-8 columns">
            <h4><%= link_to r.sender.username + " has invited you to " + r.workout.activity, workout_invitation_url(r.workout, r) %></h4>
          </div>
          <div class="small-4 columns confirm-buttons">
            <%= link_to '<i class="fi-check"></i>'.html_safe, accept_workout_invitation_path(r.workout, r), method: :post  %>
            <%= link_to '<i class="fi-x"></i>'.html_safe, decline_workout_invitation_path(r.workout, r), method: :delete %>
          </div>
        </div>
        </div>

      <% end %>
  </div>
<% end %>



<% end %>