<div class="row">
  <div class="small-12 column">
    <h2><%= @workout.activity %></h2>
  </div>
</div>

<div class="row">
  <div class="small-12 column">
    <h4 class="subheader"><%= @workout.location %></h3>
  </div>
</div>

<div class="row">
  <div class="small-12 column">
    <h4 class="subheader"><%= @workout.start_date.strftime("%A, %b %d") %> at <%= @workout.start_time.strftime("%I:%M %p") %></h4>
  </div>
</div>

<div class="attending">
  <div class="row">
    <div class="small-12 column">
      <h2>Who's Attending:</h2>
    </div>
  </div>
    <div class="row">
  <% @workout.user_workouts.each do |w| %>
      <div class="small-4 column">
      <%= gravatar_for(w.user) %>
      <div class="row participant-name">
        <div class="small-3-center column">
          <h4><%= w.user.username %></h4>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>

</div>

<div id="awaiting-confirmation">
  <h2>Awaiting Confirmation</h2>
  <% if @workout.creator == current_user %>
    <% @workout.invitations.each do |i| %>
      <% if i.confirmed == false %>
        <%= link_to i.target.username, workout_invitation_path(i.workout_id, i) %><br>
      <% end %>
    <% end %>
  <% else %>
      <% @workout.invitations.each do |i| %>
      <% if i.confirmed == false %>
        <%= i.target.username %><br>
      <% end %>
    <% end %>
  <% end %>
</div>

  <% if @invite.present? %>
  <% if @invite.errors.any? %>
  ERROR
  <% end %>
  <% end %>



  <h3>Add Friends to this Workout</h3>

  <% current_user.friends.each do |friend| %>
    <% if !friend.received_requests.find_by_workout_id(@workout).present? || !friend.workouts.find(@workout).present? %>
    <%= form_tag invite_workout_path, :method => :post, :class => "friend-invite-form" do %>
      <%= friend.username %>
      <%= hidden_field_tag(:user_id, friend.id) %>
      <div class="actions">
        <%= submit_tag "Invite Friend" %>
      </div>
    <% end %>
    <% end %>
  <% end %>

 <br>



  <div class="row">
  <div class="small-12 columns">
    <h3>Invite a friend to join Fit By Friday</h3>
    <%= form_tag(app_invite_path, method: "post") do %>
    <%= email_field_tag(:email) %>
    <%= hidden_field_tag(current_user) %>
    <%= button_tag("Invite") %>
    <% end %>
  </div>
</div>


<br>

<%= link_to "Back", root_path %>


