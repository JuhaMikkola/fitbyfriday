<% if @invitation.target == current_user %>

  <h3><%= @invitation.sender.username %> has invited you to <%= @invitation.workout.activity %></h3>
  <h4><%= link_to "Accept", accept_workout_invitation_path, method: :post %> or <%= link_to "Decline", decline_workout_invitation_path, :method => :delete %></h4>

<% elsif @invitation.sender == current_user %>

  <h3>You invited <%= @invitation.target.username %> to <%= @invitation.workout.activity %>.</h3>
  <h4><%= link_to "Cancel Invite", decline_workout_invitation_path, method: :delete %></h4>

<% end %>